<h1>Invite Friends</h1>

<%= form_with(model: @guest, url: guests_path, method: :post) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div class="actions">
    <%= form.submit "Invite" %>
  </div>
<% end %>
