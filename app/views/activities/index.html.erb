
<div class="container">
  <h1>Activities List</h1>
   <% @activities.each do |activity| %>
    <div class="row">
      <div class="col-sm">
        <h2>Description</h2>
        <p><%= activity.description %></p>
      </div>
      <div class="col-sm">
        <h2>Start</h2>
        <p><%= activity.end %></p>
      </div>
      <div class="col-sm" >
        <h2>End</h2>
        <p><%= activity.end %></p>
      </div>
      <div class="col-sm" >
        <h2>Participants</h2>
        <% GuestActivity.where(activity: activity).each do |guestactivity| %>
          <%= cl_image_tag guestactivity.guest.user.avatar.key, height: 300, width: 300, crop: :fill %>
        <% end %>
        <%= simple_form_for [activity, @guest_activity] do |f| %>
          <%= f.submit "Join Activity"%>
        <% end %>
      </div>
       <div class="col-sm" >
        <h2>Propostions</h2>
        <p><%= link_to "Add propositions", new_activity_proposition_path(activity) %></p>
      </div>
    </div>
  <% end %>
</div>
