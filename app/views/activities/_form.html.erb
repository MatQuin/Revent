   <%= simple_form_for [event, activity] do |f| %>
          <%= f.input :description,
                placeholder: "Description",
                rows: 4,
                input_html: {
                  class:"border-input",
                  data: {
                    action: "keyup->event#previewDescription"
                  }
                } %>
                <%= f.input :start,
                              html5: true,
                              rows: 4,
                              input_html: {
                                data: {
                                  action: "change->event#previewStart"
                                }
                              } %>
                <%= f.input :end,
                              html5: true,
                              rows: 4,
                              input_html: {
                                data: {
                                  action: "change->event#previewEnd"
                                }
                              } %>
           <%= f.submit 'Create', class: 'buttonsuper' %>


        <% end %>
