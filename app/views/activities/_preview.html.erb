<div class="ag-format-container">
  <div>
    <% if event.photo.attached?  %>
      <%= cl_image_tag event.photo.key, class: "w-100 rounded-4 event-preview-card__photo" %>
    <% end %>
    <h1><%= event.title || '[Add a title]'%></h1>
    <p><%= event.description || '[Add a description]'%></p><br>




    <div data-event-target="description"> <h3>Activity's description :</h3> <%= activity.description || '[Add a description]' %></div>
      <div class="d-flex">
        <div class="d-flex align-items-center">
          <i class="fa fa-calendar" aria-hidden="true"></i>
          <div data-event-target="start" style="margin: 20px 10px 20px 5px"> <%= activity.start || '[Starting at]' %></div>
        </div>
        <div data-event-target="end" style="margin: 20px 10px 20px 5px"> <%= activity.end || '[Ending at]' %></div>
      </div>
  </div>
</div>
