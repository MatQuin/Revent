<%= simple_form_for [user, event] do |f| %>
  <%= f.input :title,
                  placeholder: "Title",
                  input_html: {
                    data: {
                      action: "keyup->event#previewTitle"
                    }
                  }
                  %>
  <%= f.input :description,
                  placeholder: "Description",
                  rows: 4,
                  input_html: {
                    data: {
                      action: "keyup->event#previewDescription"
                    }
                  } %>

    <%= f.input :address,
                  placeholder: "Address",
                  rows: 4,
                  input_html: {
                    data: {
                      action: "keyup->event#previewAddress"
                    }
                  } %>

  <%= f.input :start,
                html5: true,
                rows: 4,
                input_html: {
                  data: {
                    action: "input->event#previewStart"
                  }
                } %>
  <%= f.input :end,
                html5: true,
                rows: 4,
                input_html: {
                  data: {
                    action: "input->event#previewEnd"
                  }
                } %>
  <%= f.input :photo, as: :file,
              input_html: {
                data: {
                  action: "input->event#previewPhoto"
                }
              } %>
  <%= f.submit class: 'buttonsuper' %>
<% end %>
