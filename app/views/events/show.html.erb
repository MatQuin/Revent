<div class="container margin-top-negative">
  <%= render 'shared/card', element: @event %>
  <div class="row">
    <div class="col-6">
      <div class="event-show-card">
        <%# <%= cl_image_tag @event.photo.key, height: 300, width: 400, crop: :fill %>
        <h1><%= @event.title %></h1>
        <p class="event-show-title"><%= @event.address %></p>
    </div>
    <div class="event-show-card">
      <h3>Event details</h3>
      <p> From <%= @event.start %> to <%= @event.end %> </p>
      <p><%= link_to "Invite Friends", "/guests/new"%></p>
      </div>
    </div>
    <div class="col-6">
      <div class="event-show-card">
        <%# <%= render "activities/new" %>
        <h3>Event Activities</h3>
        <p><%= link_to "Add an activity", new_event_activity_path(@event) %></p>
      </div>
    </div>
</div>
